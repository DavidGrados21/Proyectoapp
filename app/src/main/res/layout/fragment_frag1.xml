<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".alumnop.PantallaPrincipalAlumnos">


    <!-- imagen circular -->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="146dp"
        android:alpha="0.5"
        android:background="@drawable/borde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/borde" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagenUsuario"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:background="@drawable/placeholder"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="224dp"
        android:layout_height="18dp"
        android:text="Nombre"
        android:textStyle="bold"
        android:layout_marginStart="117dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtCorreo"
        android:layout_width="224dp"
        android:layout_height="18dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="5dp"
        android:text="Correo electronico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre" />


    <TextView
        android:id="@+id/textViewsiguenteClase"
        android:layout_width="250dp"
        android:layout_height="18dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Tu siguiente clase comienza en"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/fondo2"
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:background="@drawable/borde"
        android:layout_marginTop="200dp"
        android:layout_marginStart="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/borde" />

    <!-- Icono Horas -->
    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/border2"
        android:layout_marginStart="130dp"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/cardViewHoras">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX HORAS"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/border2"
        android:layout_marginStart="220dp"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/cardViewMinutos">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX MINUTOS"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewNombrecurso"
        android:layout_width="130dp"
        android:layout_height="18dp"
        android:text="(Nombre del curso)"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/fondo2"
        app:layout_constraintStart_toStartOf="@+id/fondo2"/>

        <!-- Icono Asistencia -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/border2"
            android:layout_marginStart="40dp"
            android:layout_marginTop="350dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/cardViewAsistencia">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asistencia"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/lista_asistencia" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <!-- Icono Navegación -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/border2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cardViewAsistencia"
            app:layout_constraintStart_toStartOf="@id/cardViewAsistencia"
            android:id="@+id/cardViewNavegacion">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Navegación"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/navegacion" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <!-- Icono Leer QR -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewQR"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/border2"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@+id/cardViewNavegacion"
            app:layout_constraintStart_toEndOf="@+id/cardViewNavegacion">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leer QR"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/codigo_qr" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>